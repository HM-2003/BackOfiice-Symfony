{# templates/menu/menu.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			index
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="{{asset('styles/style.css')}}">
		{% endblock %}

		{% block bootstrap %}
			<!-- Bootstrap CSS -->
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
			<!-- FontAwesome -->
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
			<!-- Your custom styles if any -->
			<style>
				.modal-content {
					padding: 20px;
				}
			</style>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_link_tags('app') }}
			<script src="{{ asset('confirmation.js') }}" defer></script>
		{% endblock %}

	</head>
	<body>
		<!-- Bootstrap JS -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<!-- User Icon Dropdown -->
		<div class="dropdown" style="position: absolute; top: 10px; right: 10px;">
			<a href="#" id="userDropdown" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
				<i class="fas fa-user" style="font-size: 24px;"></i></a>
			<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
				<li> <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
			</ul>
		</div>
		<div class="container">
			<div class="header">
				<img src="{{ asset('images/SQLIpic.png') }}" alt="ACME logo">
			</div>
			<div class="sidebar">
				<ul>
					<li><a  href="{{path('city_list')}}" class="btn btn-primary">City</a></li>
					<li><a  href="{{path('client_list')}}" class="btn btn-primary">Client</a></li>
					<li><a  href="{{path('prospect_list')}}" class="btn btn-primary">Prospect</a></li>
					<li><a  href="{{path('product_list')}}" class="btn btn-primary">Product</a></li>
					<li><a  href="{{path('package_list')}}" class="btn btn-primary">Package</a></li>
					<li><a  href="{{path('user_list')}}" class="btn btn-primary">User</a></li>
				</ul>
			</div>
			<div class="main-content">
				{% for message in app.flashes('notice') %}
					<div>
						{{message}}
					</div>
				{% endfor %}
				{% block content %}{% endblock %}
			</div>
		</div>
	</body>
</html>
