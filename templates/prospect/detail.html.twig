{% extends 'base.html.twig' %}

{% block content %}

	<h1>Prospect Details</h1>
	<table>
		<tr>
			<th>ID</th>
			<td>{{ prospect.id }}</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>{{ prospect.name }}</td>
		</tr>

		<tr>
			<th>Email</th>
			<td>{{ prospect.Email }}</td>


		</tr>

		<tr>
			<th>City</th>
			<td>{{ prospect.city.name }}</td>
		</tr>

	</table>

	<form action="{{ path('prospect_delete', { id: prospect.id }) }}" method="post" style="display:inline;" onsubmit="return confirmDeletion();">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prospect.id) }}">
		<button type="submit" class="btn btn-secondary">Delete</button>

	</form>

	<form action="{{ path('prospect_edit', { id: prospect.id }) }}" method="post" style="display:inline;">
		<button type="submit" class="btn btn-secondary">Edit</button>
	</form>

	<form action="{{ path('ConvertToClient', { id: prospect.id }) }}" method="post" style="display:inline;">
		<button type="submit" class="btn btn-secondary">Convert To Client
		</button>
	</form>

	<a href="{{path('prospect_list')}}">Back to list Prospect</a>

{% endblock %}
