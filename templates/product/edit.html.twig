
{% extends 'base.html.twig' %}
{% block content %}
    <h1>Edit Product</h1>

    {{ form_start(form) }}

       <div class="form-row">
        {{ form_label(form.name) }}: {{ form_widget(form.name) }}
    </div>

    <div class="form-row">
        {{ form_label(form.description) }}: {{ form_widget(form.description) }}
    </div>
    
